class Node(object):
    def __init__(self, item):
        self.link = None
        self.item = item

class Linked_list(object):
    def __init__(self):
        self.head = None
        self.head_link = None
        self.size = 0

    def add(self, item):
        new_node = Node(item)
        if self.head_link:
            self.head_link.link = new_node
            self.head = new_node
        else:
            self.head = new_node
            self.head_link = new_node
        self.size += 1
